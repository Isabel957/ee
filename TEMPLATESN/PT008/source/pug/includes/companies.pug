include ../includes/config
include ../includes/helpers
mixin topCompaniesItem(img, alt, text)
    .c-top-companies__item
        .c-top-companies__image
            img(src='images/components/companies/'+img+'.svg', alt=alt, aria-hidden='true', width=44, height=44, loading='lazy')
        span.c-top-companies__title=text

section.c-section.c-companies
    .o-wrapper.o-wrapper--small
        h2.c-section__title We Do the Shopping for You
        .c-section__content
            .s-cms-content
                p We partner with top national and regional insurance carriers to help you obtain quality insurance coverage. We compare quotes from different carriers to ensure you get the best coverage and great rates.
                p Here are some of our partners:
            .c-top-companies
                .c-top-companies__list
                    +topCompaniesItem('logo-progressive','', 'Progressive')
                    +topCompaniesItem('logo-safeco','', 'Safeco')
                    +topCompaniesItem('logo-bristol-west','', 'Bristol West')
                    +topCompaniesItem('logo-preferred-mutual','', 'Preferred Mutual')
                    +topCompaniesItem('logo-tfc','', 'The Philadephia Contributionship')
