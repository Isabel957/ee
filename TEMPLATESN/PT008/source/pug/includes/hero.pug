
include ../includes/config
include ../includes/helpers
.c-hero.c-hero--multiple#hero
    picture.c-hero__pic
        source(media='(min-width: 700px)', srcset='images/components/hero/hero-lg.webp, images/components/hero/hero-lg@2x.webp 2x', type='image/webp')
        img.c-hero__img(src='images/components/hero/hero-sm.webp', srcset='images/components/hero/hero-sm@2x.webp 2x' alt='Smartphone showing results of quotes for car insurance', width=360, height=175)
    .c-hero__wrapper.o-wrapper.o-wrapper--large
        h1.c-hero__title Total coverage. One source.
        p.c-hero__text All your insurance needs in one place.
        .c-hero__content
            form.c-hero-form.js-form(action='{form-lp}', method='post')
                fieldset.c-hero-form__content
                    legend.c-hero-form__title Select a product to start:
                    .c-hero-form__radios
                        .c-hero-form__radio
                            input.u-hidden-visually.c-hero-form__radio-input#productTypeCar(type='radio', name='productType', required, value='A')
                            label.c-hero-form__radio-label(for='productTypeCar') 
                                +iconSvg('icon-auto', 'c-hero-form__radio-icon')
                                span.c-hero-form__radio-text Auto
                        .c-hero-form__radio
                            input.u-hidden-visually.c-hero-form__radio-input#productTypeHome(type='radio', name='productType', value='H')
                            label.c-hero-form__radio-label(for='productTypeHome') 
                                +iconSvg('icon-home', 'c-hero-form__radio-icon')
                                span.c-hero-form__radio-text Homeowner
                        .c-hero-form__radio
                            input.u-hidden-visually.c-hero-form__radio-input#productTypeRenters(type='radio', name='productType', required, value='R')
                            label.c-hero-form__radio-label(for='productTypeRenters') 
                                +iconSvg('icon-renters', 'c-hero-form__radio-icon')
                                span.c-hero-form__radio-text Renters
                        .c-hero-form__radio
                            input.u-hidden-visually.c-hero-form__radio-input#productTypeCommercial(type='radio', name='productType', value='CI')
                            label.c-hero-form__radio-label(for='productTypeCommercial') 
                                +iconSvg('icon-commercial', 'c-hero-form__radio-icon')
                                span.c-hero-form__radio-text Commercial
                        .c-hero-form__radio
                            input.u-hidden-visually.c-hero-form__radio-input#productTypeOther(type='radio', name='productType', value='O')
                            label.c-hero-form__radio-label(for='productTypeOther') 
                                +iconSvg('icon-other', 'c-hero-form__radio-icon')
                                span.c-hero-form__radio-text Other
                        .c-hero-form__radio-error
                .c-hero-form__controls
                    .c-hero-form__item
                        label.c-hero-form__label(for='#zipcode') Zip Code
                        textarea.c-hero-form__input.c-hero-form__zipcode.js-valid-zipcode.js-only-numbers#zipcode(type='text', name=form.zipcode.name maxlength='5', minlength='3', required, autocomplete='postal-code', inputmode='numeric', aria-label='Enter you zip code')
                    //input(type='hidden' name='media_code' value='{media-code}')
                    //input(type='hidden' name='contact_phone' value='{phone-number}')
                    button.c-hero-form__submit(type='submit')
                        span Begin Your Quote
                        img(src='images/components/hero/loading.svg', alt='Loading', width='20', height='20')
